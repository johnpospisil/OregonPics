<% include ../partials/header %>

<div class="container">
    <div class="row d-flex flex-column">
        <h1 class="text-center">Edit <%= pic.picName %></h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/pics/<%= pic._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[picName]" value="<%= pic.picName %>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="text" name="pic[picURL]" value="<%= pic.picURL %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[picDescription]" value="<%= pic.picDescription %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[picLocation]" value="<%= pic.picLocation %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[cameraMake]" value="<%= pic.cameraMake %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[cameraModel]" value="<%= pic.cameraModel %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[focalLength]" value="<%= pic.focalLength %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[aperature]" value="<%= pic.aperature %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[shutterSpeed]" value="<%= pic.shutterSpeed %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="pic[iso]" value="<%= pic.iso %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!!!</button>
                </div>
            </form>  
            <a href="/pics">Go Back</a> 
        </div>
    </div>
</div>

<% include ../partials/footer %>
