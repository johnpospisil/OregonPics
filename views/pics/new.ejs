<% include ../partials/header %>

<div class="container">
    <div class="row d-flex flex-column">
        <h1 class="text-center">Add a New Picture!</h1>
        <div style="width: 50%; margin: 25px auto;">
            <form action="/pics" method="POST">
                <div class="form-group">
                    <label for="picName">Title</label>
                    <input class="form-control" type="text" name="picName" id="picName" placeholder="pic title">
                </div>
                <div class="form-group">
                    <label for="picURL">URL</label>
                    <input class="form-control" type="text" name="picURL" id="picURL" placeholder="image url">
                </div>
                <div class="form-group">
                    <label for="picDescription">Description</label>
                    <input class="form-control" type="text" name="picDescription" id="picDescription" placeholder="description">
                </div>
                <div class="form-group">
                    <label for="cameraMake">Camera Make</label>
                    <input class="form-control" type="text" name="cameraMake" id="cameraMake" placeholder="camera make">
                </div>
                <div class="form-group">
                    <label for="cameraModel">Camera Model</label>
                    <input class="form-control" type="text" name="cameraModel" id="cameraModel" placeholder="camera model">
                </div>
                <div class="form-group">
                    <label for="focalLength">Focal Length</label>
                    <input class="form-control" type="text" name="focalLength" id="focalLength" placeholder="focal length">
                </div>
                <div class="form-group">
                    <label for="aperature">Aperture</label>
                    <input class="form-control" type="text" name="aperature" id="aperature" placeholder="aperature">
                </div>
                <div class="form-group">
                    <label for="shutterSpeed">Shutter Speed</label>
                    <input class="form-control" type="text" name="shutterSpeed" id="shutterSpeed" placeholder="shutter speed">
                </div>
                <div class="form-group">
                    <label for="iso">ISO</label>
                    <input class="form-control" type="text" name="iso" id="iso" placeholder="ISO">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Portland, OR">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit!!!</button>
                </div>
            </form>  
            <a href="/pics" class="btn btn-sm btn-primary"><i class="fas fa-chevron-left fa-sm"></i> Go Back</a> 
        </div>
    </div>
</div>

<% include ../partials/footer %>
