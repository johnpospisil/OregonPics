<% include ../partials/header %>

<div class="container">
    <div class="row d-flex flex-column">
        <h1 class="text-center">Add New Comment to <%= pic.picName %></h1>
        <div style="width: 40%; margin: 25px auto;">
            <form action="/pics/<%= pic._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-outline-primary btn-block">Submit!!!</button>
                </div>
            </form>  
            <a href="/pics" class="btn btn-sm btn-outline-secondary"><i class="fas fa-chevron-left fa-sm"></i> Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
